<div class="flex flex-col justify-center mx-2 max-w-full">
    <div class="flex justify-center items-baseline text-center mt-3">
        <h2 class="text-2xl">Sign in to Sp</h2>
        <img class="h-3.5 w-3.5" src="https://cdn-icons-png.flaticon.com/512/1177/1177637.png?w=740&t=st=1663689652~exp=1663690252~hmac=3575121d83bc587df4f081d04d4848cd6767427d00fd94abb2419c8dec416f3a" alt="Weighted plate asset from freepik.com">
        <h2 class="text-2xl pl-0.5">tif</h2>
        <img class="h-5 w-5 rotate-45 -mx-2" src="https://cdn-icons-png.flaticon.com/512/639/639268.png?w=740&t=st=1663693190~exp=1663693790~hmac=8ae067339cef849630c5dca94c4adfb2f1940bedec63fc51eadfa03dccdadf2a" alt="Barbell asset from freepik.com">
        <h2 class="text-2xl pl-0.5">y</h2>
    </div>
    <div class ="bg-white mt-3 border rounded-lg px-4 py-1 md:mx-auto md:w-3/12 max-w-full">
        <% if (message) { %>
            <p class="mt-3 text-red-500 text-sm"><%= message %></p>
        <% } %> 
        <form action="/users/login" method="POST">
            <div class="mt-3 flex flex-col">
                <label for="user-or-email">Username or email address:</label>
                <input id="user-or-email" type="text" name="userOrEmail" class="mt-1 border rounded text-clip px-2 py-1" required>
            </div>
            <div class="mt-3 flex flex-col">
                <label for="password">Password:</label>
                <input id="password" type="password" name="password" class="mt-1 border rounded text-clip px-2 py-1" required>
            </div>
            <button type="submit" class="my-4 px-2 py-1 bg-blue-500 rounded text-white text-sm w-full">Sign In</button>
        </form>
    </div>
    <div class ="mt-3 border rounded-lg px-4 py-1 md:mx-auto md:w-3/12 max-w-full">
        <p class="text-center">New to Spotifly? <a href="/signup" class="text-blue-500 hover:underline">Create an account</a>.</p>
    </div>
</div>
