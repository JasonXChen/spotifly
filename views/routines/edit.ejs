<div class="flex flex-col justify-center mx-2 max-w-full">
    <div class ="bg-white mt-3 border rounded-lg px-4 py-1 md:mx-auto md:w-3/12 max-w-full">
        <form action="/routines/<%= routine.id %>/?_method=PUT" method="POST">
            <div class="mt-3 flex flex-col">
                <label for="title">Title:</label>
                <input id="title" type="text" name="title" value="<%= routine.title %>" class="mt-1 border rounded text-clip px-2 py-1" required>
            </div>
            <div class="mt-3 flex flex-col">
                <label for="description">Description:</label>
                <textarea id="description" type="text" name="description" rows="4" class="mt-1 border rounded px-2 py-1"><%= routine.description %></textarea>
            </div>
            <button type="submit" class="my-4 px-2 py-1 bg-blue-500 rounded text-white text-sm w-full">Save</button>
        </form>
    </div>
</div>
